<%# Cash Flow Period Partial - renders a single period (monthly or yearly) %>
<div class="space-y-4">
  <div class="flex items-center gap-4">
    <div class="flex-1">
      <div class="text-sm font-medium text-neutral-700 mb-1">Receita</div>
      <div class="w-full bg-neutral-200 rounded-full h-8 relative overflow-hidden">
        <div class="bg-success-600 h-full flex items-center justify-end pr-2" style="width: <%= calculate_bar_height(summary[:income_value], summary[:income_value] + summary[:expenses_value]) %>%">
          <span class="text-xs font-medium text-white">R$<%= number_with_precision(summary[:income_value], precision: 2) %></span>
        </div>
      </div>
    </div>
  </div>

  <div class="flex items-center gap-4">
    <div class="flex-1">
      <div class="text-sm font-medium text-neutral-700 mb-1">Despesas</div>
      <div class="w-full bg-neutral-200 rounded-full h-8 relative overflow-hidden">
        <div class="bg-error-600 h-full flex items-center justify-end pr-2" style="width: <%= calculate_bar_height(summary[:expenses_value], summary[:income_value] + summary[:expenses_value]) %>%">
          <span class="text-xs font-medium text-white">R$<%= number_with_precision(summary[:expenses_value], precision: 2) %></span>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-6 pt-4 border-t border-neutral-200">
  <div class="flex justify-between items-center">
    <span class="text-sm font-medium text-neutral-700">Fluxo de Caixa LÃ­quido:</span>
    <span class="text-lg font-bold <%= summary[:profit] >= 0 ? 'text-success-600' : 'text-error-600' %>">
      R$<%= number_with_precision(summary[:profit], precision: 2) %>
    </span>
  </div>
</div>

