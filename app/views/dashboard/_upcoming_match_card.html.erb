<%# Upcoming Match Card Partial %>
<div class="rounded-lg bg-white border border-neutral-200 p-6 shadow-sm hover:shadow-md transition-all hover:border-secondary-300">
  <div class="flex items-start gap-4">
    <div class="flex flex-col items-center justify-center min-w-[60px] p-2 rounded-lg bg-gradient-to-br from-secondary-500 to-secondary-600 shadow-md">
      <span class="text-2xl font-bold text-white"><%= match.date.strftime("%d") %></span>
      <span class="text-xs font-medium text-white uppercase"><%= match.date.strftime("%b") %></span>
    </div>
    <div class="flex-1 min-w-0">
      <h3 class="text-base font-semibold text-neutral-900 mb-1"><%= match.location %></h3>
      <p class="text-sm text-neutral-600 mb-1"><%= match.date.strftime("%A, %d de %B de %Y") %></p>
      <div class="flex items-center gap-2 mb-3">
        <span class="inline-flex items-center rounded-full px-2 py-1 text-xs font-medium bg-info-100 text-info-800 border border-info-200">
          <%= match.athletes.count %> atletas inscritos
        </span>
      </div>
      <%= link_to "Ver Detalhes", match_path(match), class: button_classes(variant: :primary, size: :sm) %>
    </div>
  </div>
</div>

