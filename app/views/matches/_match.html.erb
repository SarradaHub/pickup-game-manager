<div id="<%= dom_id match %>" class="rounded-lg bg-white border border-neutral-200 p-6 hover:shadow-md transition-shadow">
  <div class="text-neutral-700 space-y-2">
    <p class="text-sm font-medium">
      <span class="text-neutral-500">Data:</span>
      <span class="text-neutral-900"><%= match.date.strftime("%d/%m/%Y") if match.date %></span>
    </p>
    <p class="text-sm font-medium">
      <span class="text-neutral-500">Localização:</span>
      <span class="text-neutral-900"><%= match.location %></span>
    </p>
  </div>
</div>
