<% content_for :title, "Detalhes do Jogo" %>

<% if notice.present? %>
  <div class="flex gap-3 p-4 rounded-lg border bg-success-50 text-success-800 border-success-200 mb-6" role="alert" aria-live="polite">
    <div class="flex-1 min-w-0">
      <div class="text-sm"><%= notice %></div>
    </div>
  </div>
<% end %>

<div class="grid grid-cols-1 md:grid-cols-12 gap-6">
  <!-- Header Section -->
  <header class="md:col-span-12">
    <nav class="mb-4" aria-label="Breadcrumb">
      <%= link_to matches_path, 
          class: "text-sm text-neutral-600 hover:text-neutral-900 focus:outline-none focus:ring-2 focus:ring-secondary-500 focus:ring-offset-2 rounded-md px-2 py-1 transition-colors",
          aria: { label: "Voltar para lista de jogos" } do %>
        <span class="mr-1" aria-hidden="true">←</span>
        <span>Voltar para jogos</span>
      <% end %>
    </nav>
    <h1 class="text-3xl font-bold mb-2">Detalhes do Jogo</h1>
    <p class="text-sm text-neutral-600">Visualize e gerencie as informações do jogo</p>
  </header>

  <!-- Match Details Section -->
  <section class="md:col-span-12">
    <div class="rounded-lg bg-white border border-neutral-200 p-6">
      <h2 class="sr-only">Informações do Jogo</h2>
      <%= render @match %>
    </div>
  </section>

  <!-- Actions Section -->
  <section class="md:col-span-12">
    <div class="flex flex-wrap gap-2">
      <%= link_to edit_match_path(@match), 
          class: "inline-flex items-center justify-center rounded-lg font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 bg-secondary-600 text-white hover:bg-secondary-700 focus:ring-secondary-500 active:bg-secondary-800 px-4 py-2 text-base gap-2",
          aria: { label: "Editar jogo" } do %>
        Editar Jogo
      <% end %>
      <%= link_to matches_path, 
          class: "inline-flex items-center justify-center rounded-lg font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 bg-neutral-200 text-neutral-900 hover:bg-neutral-300 focus:ring-neutral-500 active:bg-neutral-400 px-4 py-2 text-base gap-2",
          aria: { label: "Voltar para lista de jogos" } do %>
        Voltar para Jogos
      <% end %>
      <%= button_to match_path(@match), 
          method: :delete, 
          class: "inline-flex items-center justify-center rounded-lg font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 bg-error-600 text-white hover:bg-error-700 focus:ring-error-500 active:bg-error-800 px-4 py-2 text-base gap-2",
          data: { confirm: "Tem certeza que deseja excluir este jogo?" },
          aria: { label: "Excluir jogo" } do %>
        Excluir Jogo
      <% end %>
    </div>
  </section>
</div>
